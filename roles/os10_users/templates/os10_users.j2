{#############################################
Purpose:
Configure users commands for os10 Devices
os10_users:
  - username: test
    password: test
    sshkey: "ssh-rsa AAAAsdhjkd..."
    role: sysadmin
    state: present
###############################################}
{% if os10_users is defined and os10_users %}
  {% for item in os10_users %}
    {% if item.type is defined and item.type == "system" %}
      {% if item.state is defined and item.state == "absent" %}
system-user linuxadmin disable
      {% else %}
        {% if item.password is defined and item.password %}
system-user linuxadmin password {{ item.password }}
        {% endif %}
      {% endif %}
    {% elif item.username is defined and item.username %}
      {% if item.state is defined and item.state == "absent" %}
no username {{ item.username }}
      {% else %}
        {% if item.password is defined and item.password %}
          {% if item.role is defined and item.role %}
            {% if item.password_expiry is defined %}
username {{ item.username }} password {{ item.password }} role {{ item.role }} password-expiry {{ item.password_expiry }}
            {% else %}
username {{ item.username }} password {{ item.password }} role {{ item.role }}
            {% endif %}
          {% else %}
username {{ item.username }} password {{ item.password }}
          {% endif %}
        {% endif %}
        {% if item.sshkey is defined and item.sshkey %}
          {% if item.sshkey is none %}
no username {{ item.username }} sshkey
          {% else %}
username {{ item.username }} sshkey "{{ item.sshkey }}" 
          {% endif %}
        {% endif %}
        {% if item.sshkey_file is defined and item.sshkey_file %}
          {% if item.sshkey_file is none %}
no username {{ item.username }} sshkey
          {% else %}
username {{ item.username }} sshkey filename "{{ item.sshkey_file }}" 
          {% endif %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endif %}
